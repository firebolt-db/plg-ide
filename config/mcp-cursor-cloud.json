{
  "mcpServers": {
    "firebolt": {
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--rm",
        "--network", "host",
        "-e", "FIREBOLT_MCP_CLIENT_ID",
        "-e", "FIREBOLT_MCP_CLIENT_SECRET",
        "-e", "FIREBOLT_MCP_DISABLE_RESOURCES=true",
        "ghcr.io/firebolt-db/mcp-server:0.6.0"
      ],
      "env": {
        "FIREBOLT_MCP_CLIENT_ID": "your-client-id-here",
        "FIREBOLT_MCP_CLIENT_SECRET": "your-client-secret-here"
      }
    }
  }
}
